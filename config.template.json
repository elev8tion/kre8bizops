{
  "app": {
    "name": "Your App Name",
    "version": "1.0.0",
    "environment": "development"
  },

  "api": {
    "baseUrl": "http://localhost:3000",
    "endpoints": {
      "login": "/api/login",
      "logout": "/api/logout",
      "signup": "/api/signup",
      "passwordReset": "/api/password/reset",
      "user": "/api/user"
    },
    "timeout": 30000
  },

  "security": {
    "csrfToken": "YOUR_CSRF_TOKEN_HERE",
    "enableCSRF": true,
    "enableRateLimit": true,
    "maxLoginAttempts": 5,
    "lockoutDuration": 900000
  },

  "theme": {
    "default": "light",
    "available": ["light", "dark"],
    "enableThemeSwitcher": true
  },

  "features": {
    "rememberMe": true,
    "socialLogin": false,
    "twoFactorAuth": false,
    "passwordStrength": true,
    "emailVerification": false
  },

  "analytics": {
    "enabled": false,
    "providers": {
      "googleAnalytics": {
        "enabled": false,
        "trackingId": ""
      },
      "googleTagManager": {
        "enabled": false,
        "containerId": ""
      },
      "mixpanel": {
        "enabled": false,
        "token": ""
      }
    }
  },

  "externalServices": {
    "recaptcha": {
      "enabled": false,
      "siteKey": "",
      "secretKey": ""
    },
    "cdn": {
      "enabled": false,
      "jquery": "",
      "bootstrap": "",
      "fontAwesome": ""
    },
    "fonts": {
      "enabled": false,
      "google": {
        "families": ["Poppins:400,500,600,700", "Roboto:400,500,700"]
      }
    }
  },

  "storage": {
    "type": "localStorage",
    "prefix": "app_",
    "keys": {
      "theme": "skin",
      "compactMenu": "hasCompactMenu",
      "rememberEmail": "rememberEmail",
      "authToken": "authToken"
    }
  },

  "validation": {
    "email": {
      "regex": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
      "required": true
    },
    "password": {
      "minLength": 6,
      "requireUppercase": false,
      "requireLowercase": false,
      "requireNumbers": false,
      "requireSpecialChars": false,
      "required": true
    }
  },

  "redirects": {
    "afterLogin": "/dashboard.html",
    "afterLogout": "/index.html",
    "afterSignup": "/verify-email.html",
    "afterPasswordReset": "/index.html"
  },

  "messages": {
    "errors": {
      "invalidEmail": "Please enter a valid email address",
      "invalidPassword": "Password must be at least 6 characters",
      "loginFailed": "Invalid email or password",
      "networkError": "Network error. Please try again.",
      "serverError": "Server error. Please try again later."
    },
    "success": {
      "loginSuccess": "Login successful! Redirecting...",
      "logoutSuccess": "You have been logged out successfully",
      "passwordResetSent": "Password reset link sent to your email"
    }
  },

  "ui": {
    "logoPath": "images/logo.png",
    "backgroundPath": "images/background.jpg",
    "faviconPath": "favicon.ico",
    "showAnnouncement": true,
    "announcementTitle": "Start Managing Your Business Smartly",
    "announcementButtonText": "Signup Today"
  }
}
